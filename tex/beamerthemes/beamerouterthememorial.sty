% Outer theme for Memorial University
\mode<presentation>

% Remove navigation symbols
\setbeamertemplate{navigation symbols}{}

% Customize footer with author and page numbers
\setbeamertemplate{footline}{
  \begin{beamercolorbox}[wd=1\paperwidth, ht=0.5cm, dp=0.3cm, leftskip=1em, rightskip=1em]{palette primary}
    \usebeamerfont{structure}
    \hfill
    \insertshortauthor \hspace{1em} | \hspace{1em} \insertframenumber/\inserttotalframenumber
  \end{beamercolorbox}
}

% Customize headline (optional logo area)
\setbeamertemplate{headline}{
  \begin{beamercolorbox}[wd=\paperwidth, ht=0.8cm, dp=0.2cm, leftskip=1em, rightskip=1em]{palette primary}
    \ifdim\paperwidth>0pt%
      \includegraphics[height=0.6cm]{memorial-logo} \hfill
    \fi
  \end{beamercolorbox}
}

% Title page customization
\setbeamertemplate{title page}{
  \begin{beamercolorbox}[sep=1cm, wd=\textwidth, ht=\textheight, center]{title}
    \vfill
    \usebeamerfont{title}
    \inserttitle \par
    \vskip 0.5cm
    \usebeamerfont{subtitle}
    \insertsubtitle \par
    \vfill
    \usebeamerfont{author}
    \insertauthor \par
    \vskip 0.5cm
    \usebeamerfont{date}
    \insertdate
    \vfill
  \end{beamercolorbox}
}

\mode<all>
