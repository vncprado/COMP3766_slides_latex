% Color theme for Memorial University
\mode<presentation>

% Define Memorial University colors
\definecolor{MemorialBlue}{RGB}{0, 51, 102}      % Dark blue
\definecolor{MemorialGold}{RGB}{255, 184, 28}    % Gold accent
\definecolor{DarkGray}{RGB}{64, 64, 64}          % Dark gray

% Set color scheme
\setbeamercolor{palette primary}{bg=MemorialBlue, fg=white}
\setbeamercolor{palette secondary}{bg=MemorialBlue!75, fg=white}
\setbeamercolor{palette tertiary}{bg=MemorialBlue!50, fg=white}
\setbeamercolor{palette quaternary}{bg=MemorialGold, fg=MemorialBlue}
\setbeamercolor{structure}{fg=MemorialBlue}
\setbeamercolor{title}{fg=white, bg=MemorialBlue}
\setbeamercolor{subtitle}{fg=white, bg=MemorialBlue}
\setbeamercolor{frametitle}{fg=white, bg=MemorialBlue}
\setbeamercolor{framesubtitle}{fg=MemorialGold}

\mode<all>
