{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build LaTeX (build.sh)",
      "type": "shell",
      "command": "./build.sh",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "latex",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(?:.*?:(\\d+):\\s*)?(.*)$",
          "file": 1,
          "message": 2
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Clean & Build LaTeX",
      "type": "shell",
      "command": "rm -rf pdfs/*.* && ./build.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
